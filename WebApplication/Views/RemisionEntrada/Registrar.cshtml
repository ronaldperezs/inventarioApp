<div class="jumbotron">
    <h2>Registrar Remisión de Entrada</h2>
    <div id="errors" class="alert alert-danger" role="alert" style="display:none;"></div>
    <form id="formregistrar">
        <div class="form-group">
            <label>Codigo</label>
            <input class="form-control" name="Codigo" placeholder="Ingrese codigo" required />
        </div>
        <div class="form-group">
            <label>FechaDocumento</label>
            <input class="form-control" name="Nombre" placeholder="Ingrese fecha de documeto" type="date" required />
        </div>
        <div class="form-group">
            <label>Proveedor</label>
            <select class="form-control" name="Proveedor" placeholder="Seleccione proveedor" required>
                <option value="">Seleccione</option>
            </select>
        </div>
        <div class="form-group">
            <label>Almacen</label>
            <select class="form-control" name="Almacen" placeholder="Seleccione almacen" required>
                <option value="">Seleccione</option>
            </select>
        </div>
        <div class="panel panel-default text-center">
            <div class="panel-body">
                <div class="form-group">
                    <label>Búsqueda de Productos</label>
                    <input id="busquedaProducto" class="form-control text-center" placeholder="Escriba el codigo o nombre del producto a registrar" />
                </div>
                <ul id="productosEncontrados" class="text-center listaProductosEncontrados"></ul>
                <hr />
                <label>Detalle Remisión Entrada</label>
                <table id="detalleRemisionEntrada" class="table table-condensed" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit" name="Estado" value="1">Guardar</button>
            <button class="btn btn-success" type="submit" name="Estado" value="2">Guardar y Confirmar</button>
            <a href="/remisionentrada" class="btn btn-danger">Cancelar</a>
        </div>
    </form>
</div>
<script src="~/Scripts/RemisionesEntrada/registrar.js"></script>